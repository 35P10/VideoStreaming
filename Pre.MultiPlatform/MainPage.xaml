<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pre.MultiPlatform.MainPage">

    <StackLayout>
        <Label Text="Lista de Videos" FontSize="20" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
        <Button Text="Subir Video" Clicked="OnSelectFileButtonClicked" HorizontalOptions="CenterAndExpand"/>
        <ListView x:Name="VideoListView" ItemsSource="{Binding _videoList}" ItemTapped="OnVideoSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
